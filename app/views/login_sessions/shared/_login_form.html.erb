<div class="login-design">
	<%= form_for(:session, url: login_panel_doctors_login_path) do |f| %>
		<%= f.collection_select :hospital_id, Hospital.all, :id, :hospital_name , prompt: t('.select_option')  %>
		<%= f.label t('.name') %>
		<%= f.text_field :name, placeholder: t('.placeholder_name')%>

		<label><%=t('.password') %><%=link_to t('.forgot_password'), new_password_reset_path, class: "password_reset" %></label>
		
		<%= f.password_field :password, placeholder: t('.placeholder_pw') %>
		<%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        	<span>
        		<%= t('.remember_me') %>
        	</span>
      	<% end %>

		<p>
			<%=t('.caution') %>
		</p>
		<%= f.submit yield(:button_text), class: 'button chrms radius large-4' %>

	<%end%>
	
	
</div>