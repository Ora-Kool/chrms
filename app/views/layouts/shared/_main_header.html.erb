<main-header>
	<div class="top-bar">
  		  <div class="top-bar-title" style="margin-top: 5px;">
      		<span data-responsive-toggle="responsive" data-hide-for="medium">
       			<button class="menu-icon black" type="button" data-toggle></button>
            MENU
