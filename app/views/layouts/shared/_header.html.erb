<header id="header" class="header fixed"  itemscope="" itemtype="http://schema.org/WPHeader" style="background: #0a0a0a">
	<div class="top-bar" style="background: #009688">
  		<div class="top-bar-title" style="margin-top: 5px;">
    		<span data-responsive-toggle="responsive-menu" data-hide-for="medium">
     			<button class="menu-icon white" type="button" data-toggle></button>
          MENU
    		</span>
    		<!--<strong>MENU</strong>-->
  </div>
  <div id="responsive-menu">
    <div class="top-bar-left">
      <ul class="menu" style="background: inherit; ">
        <li><%= link_to 'CHRMS', root_path %></a></li>
      </ul>
    </div>
    <div class="top-bar-right">
      <ul class="menu" style="background: inherit">
        <% if logged_manager? %>
          <li><%=  link_to t('layouts.shared.header.dashboard'), manager_dashboard_path %></li>
          <li><%=  link_to t('layouts.shared.header.logout'), managers_session_logout_path, method: :delete%></li>
        <%elsif logged_doctor?%>
          <li><%=  link_to t('layouts.shared.header.dashboard'), doctor_dashboard_path %></li>
          <li><%=  link_to t('layouts.shared.header.logout'), doctor_logout_path, method: :delete %></li>
        <%else%>
          <li><%=  link_to t('layouts.shared.header.login'), login_panel_path, class: 'fi-arrow-right'%></li>
        <%end%>
        
        
      </ul>
    </div>
     <div class="menu-centered">
      <ul class="menu main" style="background: inherit">
       
        <li><%= link_to t('layouts.shared.header.about'), about_path %></li>
        <li><%= link_to t('layouts.shared.header.contact'), contact_path%></li>
      </ul>
    </div>
  </div>
  <%= render 'layouts/shared/alert' %>
</div>
</header>

