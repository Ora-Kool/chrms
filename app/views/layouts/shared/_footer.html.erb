<div class="large-12" style="background: #004D40">
		<div class="row">
			<div class="large-4 columns footer-top">
				<h3 class="text-center chrms-font"><%=t('layouts.shared.footer.links')%></h3>
				<ul class="menu vertical footer">
					<li><%= link_to t('layouts.shared.footer.about'), about_path %></li>
					<li><%= link_to t('layouts.shared.footer.contact'), contact_path%></li>
					<li><%= link_to t('layouts.shared.footer.privacy'), privacy_policy_path %></li>
					<li><%= link_to t('layouts.shared.footer.terms'), terms_n_conditions_path %></li>
					<% if cookies[:chrms_locale] == 'fr' %>
					<li><%= link_to t('layouts.shared.footer.english'), change_locale_path(:en) %></li>
					<li><%= link_to t('layouts.shared.footer.french'), change_locale_path(:fr), class: 'active' %></li>
					<%else%>
					<li><%= link_to t('layouts.shared.footer.english'), change_locale_path(:en), class: 'active' %></li>
					<li><%= link_to t('layouts.shared.footer.french'), change_locale_path(:fr) %></li>
					<%end%>
				</ul>
			</div>
			<div class="large-4 columns footer-top">
				<h3 class="text-center chrms-font"><%= t('layouts.shared.footer.sponsors') %></h3>
				<p style="color: #FAFAFA; line-height: 2;" class="text-center">
				<%= t('layouts.shared.footer.sponsors_title') %> </p>
				<div class="large-12 columns">
	  				<%= render 'layouts/shared/sponsors' %>
				</div>
			</div>
			<div class="large-4 columns footer-top text-center">
			<h3 class="text-center chrms-font"><%= t('layouts.shared.footer.social') %> </h3>
			<p style="color: #FAFAFA; line-height: 2;">
				<%= t('layouts.shared.footer.social_desc') %>
			</p>
				<div class="row">
					
					<div class="small-12 columns text-center">
						<div class="flip-container">
							
							<div class="flipper">
								<div class="front">
									<!-- front content -->
									
								</div>
								<div class="back">
									<!-- back content -->
								</div>
							</div>
						</div>
						<a href="https://www.facebook.com/" target="_blank" class="badge chbtn"><i class="fi-social-facebook"></i></a>
						<a href="https://twitter.com/" target="_blank" class="badge chbtn"><i class="fi-social-twitter"></i></a>
						
						
					</div>
					
				</div>
			</div>
		</div>
</div>


