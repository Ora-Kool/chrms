   		<div class="row">
   			<div class="large-12 columns">
   				<div class="row">
   					<div class="large-9 columns">
   						<h4>Referrals Box</h4>
   					</div>

   					<div class="large-3 columns">
                     <!-- Search box rendering here-->
                     <%= render "doctors/shared/search" %>
   					</div>
   					
   				</div>
   				
   			</div>
   			<div style="width: 100%">
   			<div class="large-12 columns" data-hide="medium">
   				<table>
   					<tr>
   						<th>Referral's Name/Contact</th>
   						<th>Patient Name</th>
   						<th>Referral Type</th>
   						<th>Referral Date</th>
   					</tr>
   					<% if @referrals.present? %>
   					<% @referrals.each do |referral| %>
   						<tr>
   							<td><%= referral.signature %><br>email or contact</td>
   							<td>
   								<%= referral.patient_full_names%>
   							</td>
   							<td><%=referral.referral_type %><br>
                           status-urgent</td>
   							<td><%= referral.created_at.strftime("%B %d, %Y") %></td>
   						</tr>
   						
   					<% end %>
   					
   					<%else%>
   					<p style="font-family: courier; color: red">No records found</p>
   					<%end%>
   				</table>
   			</div>
   		</div>
   		</div>
