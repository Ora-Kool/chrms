<%provide(:title, "Doctor's Dashboard - CHRMS") %>
<div class="large-3 columns">
	<table>
		<td><h4>Dr. <%= current_doctor.name.capitalize %></h4></td>
		<tr>

			<td>
				<%=image_tag('doctor.jpg', style: 'width: 100%; height: 10rem') %>
			</td>
		</tr>
		<tr>
			<td>View my account</td>
		</tr>
      <tr>
         <td><%= link_to 'Request Referral', chrms_doctors_dashboard_request_referral_path %></td>
      </tr>
		<tr>
			<td>Patient</td>
		</tr>
		<tr>
			<td><%= link_to 'Messages' %></td>
		</tr>
		<tr>
			<td>Setup Notifications</td>
		</tr>
	</table>

</div>
<div class="row">
