			<button class="float-right top" data-close aria-label="Clomodal" type="button">
							  <span aria-hidden="true">&times;</span>
						</button>
					</div>
				     </p>
				        <hr class="horizontal-line">
				        <%= render "doctors/shared/edit_form" %>
			      </div>
			      
			      
			    </div>
			  </div>
		</div>
     </div>
</div>