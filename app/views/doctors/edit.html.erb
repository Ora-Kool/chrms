				        	<hr class="horizontal-line">
				        	
				        	<div class="row">
				        		<div class="medium-3 columns">
				        			<h2>
				        				<%=image_tag(current_doctor.photo.url) %>
				        			</h2>
				        		</div>
				        		<div class="medium-9 columns">
				        			<%= render "doctors/shared/details_profile" %>
				        		</div>
				        		<hr class="horizontal-line">
				        	</div>
				        	<div class="row">
				        		<div class="large-12 columns">
				        			<h5>Mobile Number:(+237) <%=@doctor.mobile_number %></h5>
				        			<h5>Country: <%=@doctor.country %></h5>
				        			<h5>Region: <%=@doctor.region %></h5>
				        			<h5>City: <%=@doctor.city %></h5>
				        		</div>
				        	</div>
			      	</div>
			      
			      <div class="tabs-panel is-active" id="profile-settings">
			      	<h4>Account Settings</h4>
