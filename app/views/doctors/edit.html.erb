<div class="medium-3 columns">
<!-- left site navigation that houses the links-->

	<ul class="tabs vertical" id="target" data-tabs>
		<li class="tabs-title"><a href="#account-summary" aria-selected="false">Account Summary</a></li>

		<li class="tabs-title is-active"><%=link_to 'Account Settings', '#profile-settings', class: "fi-widget" %></li>
		
	</ul>
	<table>
		<tr>
			<td class="back">
				<%=link_to 'Dashboard', doctor_dashboard_path %>
			</td>
		</tr>
	</table>
	
</div>

 <div class="row">
      	<div class="large-9 columns">
         <div class="row collapse">        
		    <!--Container that displays the pages-->
		    <div class="large-12 columns">
			    <div class="tabs-content vertical" data-tabs-content="target">
