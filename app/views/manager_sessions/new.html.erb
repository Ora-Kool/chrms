<%provide(:title, 'Manager - CHRMS') %>
<div class="row">
	<div class="large-6 large-offset-3 columns">
		<h1>Manager</h1>
		<%= form_for(:session,  url: managers_session_login_path) do |f| %>
			<%= f.label "email address" %>
    		<%= f.text_field :name %>

    		<%= f.label :password %>
		    <%= f.password_field :password %>

		    <%= f.submit "Login", class: "button large-5"%>
		<%end%>
	</div>
</div>
