        <div class="large-4 small-4 columns">
          <h5 style="margin-left: .7rem;">
            <%=image_tag('profile.svg')%>
          </h5>
        </div>
          <div class="large-7 small-7 columns profile">
            <h5 class="chrms-font" style="padding-top: .1rem">
              <%= current_manager.name.capitalize %>
            </h5>
            <p style="color: white"><i><%= image_tag('rec.svg', size: 10)%></i> online</p>
          </div>
          <div class="large-12 columns">
            <ul class="tabs vertical" data-tabs id="target" style="margin-top: 0; background: #0f6352">
            <li class="tabs-title is-active"><a href="#dashboard" aria-selected="true" style="color: #6bce70">DASHBOARD</a></li>
            <li class="tabs-title"><a href="#hospitals" style="color: #6bce70">HOSPITALS</a></li>
