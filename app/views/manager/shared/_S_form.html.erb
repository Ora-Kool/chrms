<%= form_for(@staff, url: manager_dashboard_staff_add_path) do |f| %>
<%= render 'layouts/shared/error_messages', object: @staff %>
		
		<%= f.label "staff's name" %>
		<%= f.text_field :name %>

		<%= f.label "staff's password" %>
		<%= f.password_field :password %>

		<%= f.label "password confirmation" %>
		<%= f.password_field :password_confirmation %>
		<div class="text-center">
		<%= f.submit yield(:button_text), class: 'button chrms radius large-4' %> </div>

<%end%>